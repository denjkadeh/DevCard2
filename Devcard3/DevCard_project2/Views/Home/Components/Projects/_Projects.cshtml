@model IEnumerable<DevCard_project2.Models.Project2>

<section class="featured-section p-3 p-lg-5">
    <div class="container">
        <h2 class="section-title font-weight-bold mb-5">خاص ترین  همکاران</h2>
        <div class="row">
            @foreach (var project in Model)
            {
            <div class="col-md-6 mb-5">
                <div class="card project-card">
                    <div class="row no-gutters">
                        <div class="col-lg-4 card-img-holder">
                            <img src="~/assets/images/project/@project.Image" class="card-img" alt="image">
                        </div>
                        <div class="col-lg-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="project.html" class="theme-link">
                                       @project.Id : @project.Name
                                    </a>
                                </h5>
                                <p class="card-text">
                                    @*هسته فناور باران در واقع یک شرکت دانش بنیان می باشد.*@
                                    @project.Description
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">استاد: @project.Client</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
            
            
        </div>
    </div>
</section>